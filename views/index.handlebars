<div class="container">
    <div class="row">
        <div class="col" class="center col-sm-12">
            {{!-- <img src="assets/img/burger.png" alt="burgers"> --}}
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="row">
        <form class="create-form" action="/api/burgers" method="post">
            <div class="form-group">

                <div class="col">
                    <input type="text" id="ca" name="name">
                    <button type="submit">Add a Burger</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row" class="col-sm-6">

        <br>
        <h2>Burgers Available To Eat!</h2>

        <ul>
            {{#each burger_data}}
            {{#unless this.devoured}}
            <li>

                {{this.burger_name}}

                <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn-primary" type="submit">Devour It!</button>
                </form>

            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="row" class="col-sm-6">

        <h2>Burgers That Have Been Eaten!</h2>
        <ul>

            {{#each burger_data}}
            {{#if this.devoured}}
            <li>

                {{this.burger_name}}

            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>